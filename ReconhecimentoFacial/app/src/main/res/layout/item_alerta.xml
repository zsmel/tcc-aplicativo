<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/ivAlertaFoto"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_placeholder_person"
            android:scaleType="centerCrop"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="16dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvAlertaHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MATCH 00% | LOCAL"
                android:textStyle="bold"
                android:textColor="#D32F2F"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvAlertaData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data/Hora"
                android:textSize="12sp"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tvAlertaVitima"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VÃ­tima"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/tvAlertaStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textSize="12sp"
                android:layout_marginTop="2dp"/>

            <Button
                android:id="@+id/btnAlertaDetalhes"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginTop="8dp"
                android:text="DETALHES"
                android:textSize="12sp"
                android:backgroundTint="@color/gray_2"
                android:textColor="@color/black"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>