<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6F8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Foto -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgFoto"
            android:layout_width="112dp"
            android:layout_height="112dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/user"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/CircleImage" />

        <!-- Nome + status -->
        <TextView
            android:id="@+id/tvNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:text="xxxxxxxxxxxxxx"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#111111" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:text="Em andamento"
            android:textColor="#7A7A7A" />

        <!-- Seções -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <include
                android:id="@+id/secDadosPessoais"
                layout="@layout/include_expandable_section" />

            <include
                android:id="@+id/secDadosOcorrencia"
                layout="@layout/include_expandable_section" />

            <include
                android:id="@+id/secDadosComunicante"
                layout="@layout/include_expandable_section" />

            <include
                android:id="@+id/secAlertasEmitidos"
                layout="@layout/include_expandable_section" />
        </LinearLayout>

        <!-- Ações -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btnEditar"
                android:backgroundTint="@color/gray_2"
                android:textColor="@color/black"
                android:text="@string/editar"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:textSize="14sp" />

            <View
                android:layout_width="12dp"
                android:layout_height="1dp" />

            <Button
                android:id="@+id/btnSalvar"
                android:backgroundTint="@color/black"
                android:textColor="@color/white_2"
                android:text="@string/salvar"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:textSize="14sp"  />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
